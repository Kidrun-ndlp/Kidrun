{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Lastname{% endtrans %}</th>
                <td>{{ student.lastname }}</td>
            </tr>
            <tr>
                <th>{% trans %}Firstname{% endtrans %}</th>
                <td>{{ student.firstname }}</td>
            </tr>
            <tr>
                <th>{% trans %}Gender{% endtrans %}</th>
                <td>{{ student.gender }}</td>
            </tr>
            <tr>
                <th>{% trans %}Mas{% endtrans %}</th>
                <td>{{ student.mas }}</td>
            </tr>
            <tr>
                <th>{% trans %}Objective{% endtrans %}</th>
                <td>{{ student.objective ? student.objective|date('H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_student_index') }}">{% trans %}back to list{% endtrans %}</a>

    <a href="{{ path('app_student_edit', {'id': student.id}) }}">{% trans %}edit{% endtrans %}</a>

    {{ include('student/_delete_form.html.twig') }}
{% endblock %}

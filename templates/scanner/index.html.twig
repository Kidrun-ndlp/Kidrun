{% extends 'base.html.twig' %}

{% block title %}Hello ScannerController!{% endblock %}

{% block body %}
<script src="./js/html5-qrcode.min.js"></script>
    <style>
        .result {
            background-color: green;
            color: #fff;
        }
    </style>
    <div class="row">
        <div class="col">
            <div style="width:500px;" id="reader"></div>
        </div>
        <div class="col" style="padding:30px;">
            <h4>{% trans %}SCAN RESULT{% endtrans %}</h4>
            <div id="result">{% trans %}Result Here{% endtrans %}</div>
        </div>
        <div class="col" >            
                <button id="start" class="button" onclick="start()">{% trans %}Start{% endtrans %}</button>             
        </div>
    </div>
    <script type="text/javascript" src="./js/qrCode.js"></script>
    <script type="text/javascript" src="./js/start.js"></script>
{% endblock %}

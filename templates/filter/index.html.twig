{% extends 'base.html.twig' %}

{% block title %}Hello RankingController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    <h1>Classement</h1>
    <table border="0">
        <th><label> Grade</label></th>
        <th><label> Level</label></th>
        <th><label> Gender</label></th>
        <tr>
            <td>
           <form method="get" action="{{ path('app_filter') }}">
    <select name="grades">
        <option value="">-- Select a grade --</option>
        {% for grade in grades %}
        <option value="{{ grade.shortname }}"{% if grade==grade_checked %}selected{% endif%}>{{ grade.shortname }}</option>
        {% endfor %}
    </select>
    <select name="levels">
        <option value="">-- Select a level --</option>
        {% for level in levels %}
        <option value="{{ level }}" {% if level==level_checked %}selected{% endif%}>{{ level }}</option>
        {% endfor %}
    </select>
    <select name="genders">
        <option value="">-- Select a gender --</option>
        {% for gender in genders %}
        <option value="{{ gender }}" {% if gender==gender_checked %}selected{% endif%}>{{ gender }}</option>
        {% endfor %}
    </select>
    <input type="submit" value="Envoyer">
</form>
        {# </tr> #}
    </table>

    <br /><br />
    <table border="1">
        <tr>
            <th>Numéro</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Classe</th>
            <th>Catégorie</th>
            <th>Genre</th>
        </tr>
        {% for row in rows %}
        <tr>
            <td>{{ row.id }}</td>
            <td>{{ row.lastname }}</td>
            <td>{{ row.firstname }}</td>
            <td>{{ row.shortname }}</td>
            <td>{{ row.level }}</td>
            <td>{{ row.gender }}</td>
        </tr>
        {% endfor %}

        {{ error_message }}
    </table>


</div>
{% endblock %}

<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    <h1>Classement</h1>
    <form>
        <div class="form-group row col-md-8">
            <label class="col-md-2 col-form-label">Grade</label>
            <div class="col-md-2">
                <select name="grades" id="grade">
                    {% for grade in grades %}
                    <option id='grade' value='{{ grade.shortname }}'>{{ grade.shortname }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="form-group row col-md-8">
            <label class="col-md-2 col-form-label">Level</label>
            <div class="col-md-2">
                <select name="levels" id="level">
                    {% for level in levels %}
                    <option  id='level' value='{{ level }}'>{{ level }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="form-group row col-md-8">
            <label class="col-md-2 col-form-label">Gender</label>
            <div class="col-md-2">
                <select name="genders" id="gender">
                    {% for gender in genders %}
                    <option  id='gender' value='{{ gender }}'>{{ gender }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

    </form>
